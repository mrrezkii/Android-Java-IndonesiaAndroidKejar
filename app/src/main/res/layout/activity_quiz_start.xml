<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.rezkiananda.learn.programminglanguage.QuizStartActivity">

    <ImageView
        android:id="@+id/imageQuiz"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="86dp"
        app:srcCompat="@drawable/quiz" />

    <TextView
        android:id="@+id/textViewDeskripsiQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageQuiz"
        android:gravity="center"
        android:text="@string/quiz_deskripsi" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDeskripsiQuiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Start"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@color/colorPrimaryDark" />
</RelativeLayout>
